#!/bin/bash
# Build Hot Digest
# Compresses recent events into context-friendly format
#
# Usage:
#   build-hot-digest [--hours 12] [--max-tokens 3000] [--no-ollama]

set -e

# Resolve actual script location (follow symlinks)
SOURCE="${BASH_SOURCE[0]}"
while [ -L "$SOURCE" ]; do
    DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
    SOURCE="$(readlink "$SOURCE")"
    [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
REPO_ROOT="$(dirname "$SCRIPT_DIR")"

# Use uv run if available, otherwise fall back to python3
if command -v uv &> /dev/null; then
    cd "$REPO_ROOT" && PYTHONPATH="$REPO_ROOT" uv run python3 "$REPO_ROOT/lib/hot_digest_builder.py" "$@"
else
    cd "$REPO_ROOT" && PYTHONPATH="$REPO_ROOT" python3 "$REPO_ROOT/lib/hot_digest_builder.py" "$@"
fi
