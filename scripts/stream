#!/bin/bash
# Unified Event Stream CLI
# Manages the contiguous memory event stream
#
# Usage:
#   stream write --surface cli --type interaction --direction inbound --summary "..."
#   stream query [--hours 12] [--surface cli]
#   stream mark-distilled <event_id>...
#   stream archive [--days 30]
#   stream stats
#   stream undistilled [--date YYYY-MM-DD]
#   stream validate

set -e

# Resolve actual script location (follow symlinks)
SOURCE="${BASH_SOURCE[0]}"
while [ -L "$SOURCE" ]; do
    DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
    SOURCE="$(readlink "$SOURCE")"
    [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
REPO_ROOT="$(dirname "$SCRIPT_DIR")"

# Use uv run if available, otherwise fall back to python3
if command -v uv &> /dev/null; then
    cd "$REPO_ROOT" && PYTHONPATH="$REPO_ROOT" uv run python3 "$REPO_ROOT/lib/stream_cli.py" "$@"
else
    cd "$REPO_ROOT" && PYTHONPATH="$REPO_ROOT" python3 "$REPO_ROOT/lib/stream_cli.py" "$@"
fi
