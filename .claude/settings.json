{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/claude/Developer/samara-main/.claude/hooks/block-deriveddata-copy.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/claude/.claude-mind/bin/distill-claude-session",
            "timeout": 120
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Review this session for NEW capabilities (scripts, skills, services, MCP integrations, major features). Respond with ONLY valid JSON, no other text:\n\nIf new undocumented capabilities: {\"ok\": false, \"message\": \"Update inventory.md for: [list]\"}\nIf none or already documented: {\"ok\": true}",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "agent-sdk-dev@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true,
    "playwright@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true
  }
}
