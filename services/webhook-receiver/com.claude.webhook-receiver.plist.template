<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.claude.webhook-receiver</string>

    <key>ProgramArguments</key>
    <array>
        <string>{{REPO_PATH}}/services/webhook-receiver/.venv/bin/python</string>
        <string>{{REPO_PATH}}/services/webhook-receiver/server.py</string>
        <string>--port</string>
        <string>8082</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>{{HOME}}/.claude-mind/system/logs/webhook-receiver.log</string>

    <key>StandardErrorPath</key>
    <string>{{HOME}}/.claude-mind/system/logs/webhook-receiver.log</string>

    <key>WorkingDirectory</key>
    <string>{{REPO_PATH}}/services/webhook-receiver</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>HOME</key>
        <string>{{HOME}}</string>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:{{HOME}}/.local/bin</string>
        <key>PYTHONPATH</key>
        <string>{{REPO_PATH}}/services/webhook-receiver</string>
    </dict>
</dict>
</plist>
